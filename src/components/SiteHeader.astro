---
/**
 * Updated SiteHeader.astro with HOVER-BASED dropdown navigation
 * Main nav items are CLICKABLE links, dropdown shows on HOVER with CLICKABLE sub-pages
 * Dropdowns only show sub-pages (not the main page link)
 * File: src/components/SiteHeader.astro
 */
import { getCollection } from 'astro:content';
import { withBase } from '../utils/paths';
import { NAV_ITEMS, EXTERNAL_LINKS } from '../config/constants';

interface Props {
  active?: string;
}

const { active = "home" } = Astro.props;

// Get current path to check for active dropdown items
const currentPath = Astro.url.pathname.replace(import.meta.env.BASE_URL || '', '') || '/';

// Fetch all projects for dropdown
const allProjects = await getCollection('projects');

// Define dropdown items for "How" - ONLY sub-pages, not main page
const howDropdownItems = [
  { key: 'how-safety', label: 'Safety Protocols', href: '/how/safety' },
  { key: 'how-licensing', label: 'Licensing', href: '/how/licensing' },
];

// Build navigation with dropdowns
const navigationItems = NAV_ITEMS.map(item => {
  // Add dynamic dropdown for Projects - ONLY individual projects, not "All Projects"
  if (item.key === 'projects') {
    return {
      ...item,
      dropdown: allProjects.map(project => ({
        key: `project-${project.slug}`,
        label: project.data.title,
        href: `/projects/${project.slug}`
      }))
    };
  }
  
  // Add dropdown for How - ONLY sub-pages
  if (item.key === 'how') {
    return {
      ...item,
      dropdown: howDropdownItems
    };
  }
  
  return item;
});

// Social links configuration
const socialLinks = [
  {
    name: "YouTube",
    url: EXTERNAL_LINKS.youtube,
    icon: "youtube",
    label: "Visit Arc^ on YouTube"
  },
  {
    name: "Discord",
    url: EXTERNAL_LINKS.discord,
    icon: "discord",
    label: "Join Arc^ Discord community"
  }
];

// Helper to check if nav item or its dropdown is active
function isItemActive(item: typeof navigationItems[number]) {
  if (item.key === active) return true;
  if (item.dropdown) {
    return item.dropdown.some(subItem => currentPath === subItem.href);
  }
  return false;
}
---

<header class="site-header" role="banner">
  <div class="site-brand">
    <a href={withBase("/")} class="site-brand__link" aria-label="arc^ home">
      arc^ <span class="brand-by">by</span> ali
    </a>
  </div>
  
  <nav class="site-nav" aria-label="Primary navigation">
    <ul class="nav-list">
      {navigationItems.map((item) => (
        <li class={item.dropdown ? "nav-item has-dropdown" : "nav-item"}>
          {/* Main nav link - ALWAYS CLICKABLE */}
          <a
            href={withBase(item.href)}
            class={isItemActive(item) ? "nav-link is-active" : "nav-link"}
            aria-current={isItemActive(item) ? "page" : undefined}
            aria-haspopup={item.dropdown ? "true" : undefined}
          >
            {item.label}
          </a>
          
          {/* Dropdown menu - SHOWS ON HOVER, sub-pages only */}
          {item.dropdown && item.dropdown.length > 0 && (
            <ul class="nav-dropdown" role="menu">
              {item.dropdown.map((subItem) => (
                <li role="none">
                  <a
                    href={withBase(subItem.href)}
                    class={currentPath === subItem.href ? "nav-dropdown-link is-active" : "nav-dropdown-link"}
                    role="menuitem"
                  >
                    {subItem.label}
                  </a>
                </li>
              ))}
            </ul>
          )}
        </li>
      ))}
    </ul>
  </nav>

  <div class="site-social" aria-label="Social media links">
    {socialLinks.map((social) => (
      <a
        href={social.url}
        class="social-link"
        target="_blank"
        rel="noopener noreferrer"
        aria-label={social.label}
        title={social.name}
      >
        {social.icon === "youtube" && (
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" role="img" aria-hidden="true">
            <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z" fill="currentColor"/>
          </svg>
        )}
        {social.icon === "discord" && (
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" role="img" aria-hidden="true">
            <path d="M20.317 4.37a19.791 19.791 0 0 0-4.885-1.515.074.074 0 0 0-.079.037c-.21.375-.444.864-.608 1.25a18.27 18.27 0 0 0-5.487 0 12.64 12.64 0 0 0-.617-1.25.077.077 0 0 0-.079-.037A19.736 19.736 0 0 0 3.677 4.37a.07.07 0 0 0-.032.027C.533 9.046-.32 13.58.099 18.057a.082.082 0 0 0 .031.057 19.9 19.9 0 0 0 5.993 3.03.078.078 0 0 0 .084-.028c.462-.63.874-1.295 1.226-1.994a.076.076 0 0 0-.041-.106 13.107 13.107 0 0 1-1.872-.892.077.077 0 0 1-.008-.128 10.2 10.2 0 0 0 .372-.292.074.074 0 0 1 .077-.01c3.928 1.793 8.18 1.793 12.062 0a.074.074 0 0 1 .078.01c.12.098.246.198.373.292a.077.077 0 0 1-.006.127 12.299 12.299 0 0 1-1.873.892.077.077 0 0 0-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 0 0 .084.028 19.839 19.839 0 0 0 6.002-3.03.077.077 0 0 0 .032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 0 0-.031-.03zM8.02 15.33c-1.183 0-2.157-1.085-2.157-2.419 0-1.333.956-2.419 2.157-2.419 1.21 0 2.176 1.096 2.157 2.42 0 1.333-.956 2.418-2.157 2.418zm7.975 0c-1.183 0-2.157-1.085-2.157-2.419 0-1.333.955-2.419 2.157-2.419 1.21 0 2.176 1.096 2.157 2.42 0 1.333-.946 2.418-2.157 2.418z" fill="currentColor"/>
          </svg>
        )}
      </a>
    ))}
  </div>
</header>