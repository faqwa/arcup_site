---
// ============================================================================
// TEMPLATE.ASTRO - UNIVERSAL PATTERN SHOWCASE
// Complete reference for building any ArcUp page using global-v2.css
// ============================================================================
/*
AI Summary Metadata:
title: ArcUp Template - Universal Design Patterns
summary: Comprehensive showcase of all reusable patterns, components, and layouts available in the ArcUp design system.
keywords: design system, component library, layout patterns, UI templates
ai_content_highlights:
  - Complete demonstration of universal CSS patterns
  - Hero, section, card grid, and navigation examples
  - All component variants shown (buttons, cards, badges)
  - Copy-paste ready code blocks for rapid page building
*/

import BaseLayout from "../layouts/BaseLayout.astro";
import ArcCanvas from "../components/ArcCanvas.astro";
import SectionHeader from "../components/SectionHeader.astro";
import SectionDivider from "../components/SectionDivider.astro";
import Card from "../components/Card.astro";
import LinkButton from "../components/LinkButton.astro";
import StatusBadge from "../components/StatusBadge.astro";
import CalloutPanel from "../components/CalloutPanel.astro";

import { withBase } from "../utils/paths";
import { buildSEO } from "../utils/seo";

const seo = buildSEO({
  title: "ArcUp Template - Universal Patterns",
  description: "Complete showcase of all universal design patterns, components, and layouts for building consistent ArcUp pages.",
  path: "/template",
  siteUrl: Astro.site,
});
---

<BaseLayout
  title={seo.title}
  description={seo.description}
  bodyClass="page-template"
  seo={seo}
  navActive="projects"
>
  <ArcCanvas slot="before-header" />

  <main id="main-content" class="page-shell" aria-labelledby="page-title">

    <!-- ========================================================================
         PATTERN 1: PAGE HERO (Standard)
         ======================================================================== -->
    <header class="page-hero" aria-labelledby="page-title">
      <p class="eyebrow">Pattern Showcase</p>
      <h1 id="page-title">Universal Template</h1>
      <p class="lead">
        This template demonstrates every universal pattern available in <strong>global-v2.css</strong>.
        Use these examples to build any page quickly and consistently.
      </p>
      
      <div class="section-cta">
        <LinkButton href={withBase("/projects")} variant="primary" icon="arrow-right">
          Primary Action
        </LinkButton>
        <LinkButton href={withBase("/about")} variant="outline" icon="arrow-right">
          Secondary Action
        </LinkButton>
      </div>
    </header>

    <SectionDivider />

    <!-- ========================================================================
         PATTERN 2: PAGE HERO (Large Title)
         ======================================================================== -->
    <header class="page-hero">
      <p class="eyebrow">Alternative Hero Pattern</p>
      <h1 class="hero-title">arc^</h1>
      <p class="lead">
        Use <code>.hero-title</code> class for extra-large display titles.
      </p>
    </header>

    <SectionDivider />

    <!-- ========================================================================
         PATTERN 3: SECTION WITH SECTIONHEADER
         ======================================================================== -->
    <section class="page-section page-section--center">
      <SectionHeader
        eyebrow="Component Pattern"
        title="Section with SectionHeader"
        subtitle="Use the SectionHeader component for consistent heading blocks."
        align="center"
      />
      
      <p>Additional content goes here after the SectionHeader component.</p>
    </section>

    <SectionDivider />

    <!-- ========================================================================
         PATTERN 4: PROSE CONTENT
         ======================================================================== -->
    <section class="page-section">
      <SectionHeader
        title="Prose Content Pattern"
        subtitle="For text-heavy sections with multiple paragraphs"
        align="left"
      />
      
      <div class="content-prose">
        <p>
          <strong>The content-prose container</strong> provides optimal typography for reading.
          It handles spacing, line-height, and emphasis colors automatically.
        </p>
        
        <p>
          Paragraphs inside <code>.content-prose</code> get proper spacing, 
          <strong>bold text</strong> is highlighted, and 
          <em>italic text</em> uses the accent color.
        </p>
      </div>
    </section>

    <SectionDivider />

    <!-- ========================================================================
         PATTERN 5: 2-COLUMN CARD GRID
         ======================================================================== -->
    <section class="page-section page-section--center">
      <SectionHeader
        eyebrow="Card Grid Patterns"
        title="2-Column Grid"
        subtitle="Use card-grid--2 for side-by-side cards."
        align="center"
      />
      
      <div class="card-grid card-grid--2" role="list">
        <Card as="article" variant="surface" hover={true} role="listitem">
          <h3>First Card</h3>
          <p>
            Cards in a 2-column grid display side-by-side on desktop,
            then stack vertically on mobile.
          </p>
          <p class="card-note"><em>This is a card note with separator line.</em></p>
        </Card>
        
        <Card as="article" variant="surface" hover={true} role="listitem">
          <h3>Second Card</h3>
          <p>
            All cards maintain equal height. The card-note
            is aligned at the bottom.
          </p>
          <p class="card-note"><em>Note appears at consistent position.</em></p>
        </Card>
      </div>
    </section>

    <SectionDivider />

    <!-- ========================================================================
         PATTERN 6: 3-COLUMN CARD GRID
         ======================================================================== -->
    <section class="page-section page-section--center">
      <SectionHeader
        title="3-Column Grid"
        subtitle="Use card-grid--3 for three-across layouts"
        align="center"
      />
      
      <div class="card-grid card-grid--3" role="list">
        <Card as="article" variant="surface" hover={true} role="listitem">
          <h3>Card One</h3>
          <p>Three-column grids work great for features.</p>
          <p class="card-note"><em>Status: Active</em></p>
        </Card>
        
        <Card as="article" variant="surface" hover={true} role="listitem">
          <h3>Card Two</h3>
          <p>On large screens, these display three across.</p>
          <p class="card-note"><em>Status: Testing</em></p>
        </Card>
        
        <Card as="article" variant="surface" hover={true} role="listitem">
          <h3>Card Three</h3>
          <p>Mobile view stacks all cards.</p>
          <p class="card-note"><em>Status: Ready</em></p>
        </Card>
      </div>
    </section>

    <SectionDivider />

    <!-- ========================================================================
         PATTERN 7: 4-COLUMN CARD GRID (2×2)
         ======================================================================== -->
    <section class="page-section page-section--center">
      <SectionHeader
        title="4-Column Grid (2×2)"
        subtitle="Use card-grid--4 for balanced 2×2 layouts."
        align="center"
      />
      
      <div class="card-grid card-grid--4" role="list">
        <Card as="article" variant="surface" hover={true} role="listitem">
          <h3>Technology</h3>
          <p>
            Four-card grids display as 2×2 on desktop and stack on mobile.
          </p>
          <p class="card-note"><em>Focus: Engineering & design</em></p>
        </Card>
        
        <Card as="article" variant="surface" hover={true} role="listitem">
          <h3>Water Systems</h3>
          <p>
            Each card maintains equal height with others in the grid.
          </p>
          <p class="card-note"><em>Focus: Chemistry & application</em></p>
        </Card>
        
        <Card as="article" variant="surface" hover={true} role="listitem">
          <h3>Organisms</h3>
          <p>
            Card headings use primary-bright color for hierarchy.
          </p>
          <p class="card-note"><em>Focus: Biology & safety</em></p>
        </Card>
        
        <Card as="article" variant="surface" hover={true} role="listitem">
          <h3>Ecosystems</h3>
          <p>
            Separator line above card-notes provides visual distinction.
          </p>
          <p class="card-note"><em>Focus: Ecology & modeling</em></p>
        </Card>
      </div>
      
      <div class="section-cta">
        <LinkButton href={withBase("/how")} variant="outline" icon="arrow-right">
          Learn More
        </LinkButton>
      </div>
    </section>

    <SectionDivider />

    <!-- ========================================================================
         PATTERN 8: BUTTON VARIANTS
         ======================================================================== -->
    <section class="page-section page-section--center">
      <SectionHeader
        eyebrow="Components"
        title="Button Variants"
        subtitle="Primary, Outline, and Ghost styles"
        align="center"
      />
      
      <div class="section-cta">
        <LinkButton href={withBase("/projects")} variant="primary" icon="arrow-right">
          Primary Button
        </LinkButton>
        <LinkButton href={withBase("/about")} variant="outline" icon="arrow-right">
          Outline Button
        </LinkButton>
        <LinkButton href={withBase("/join")} variant="ghost" icon="arrow-right">
          Ghost Button
        </LinkButton>
      </div>
    </section>

    <SectionDivider />

    <!-- ========================================================================
         PATTERN 9: STATUS BADGES
         ======================================================================== -->
    <section class="page-section page-section--center">
      <SectionHeader
        title="Status Badges"
        subtitle="Visual indicators for project state"
        align="center"
      />
      
      <div class="card-grid card-grid--4" role="list">
        <Card as="article" variant="surface" role="listitem">
          <StatusBadge status="early-idea" />
          <h3>Early Idea</h3>
          <p>For projects in planning phase.</p>
        </Card>
        
        <Card as="article" variant="surface" role="listitem">
          <StatusBadge status="active" />
          <h3>Active</h3>
          <p>For projects in development.</p>
        </Card>
        
        <Card as="article" variant="surface" role="listitem">
          <StatusBadge status="paused" />
          <h3>Paused</h3>
          <p>For temporarily on hold.</p>
        </Card>
        
        <Card as="article" variant="surface" role="listitem">
          <StatusBadge status="completed" />
          <h3>Completed</h3>
          <p>For finished projects.</p>
        </Card>
      </div>
    </section>

    <SectionDivider />

    <!-- ========================================================================
         PATTERN 10: CALLOUT PANELS
         ======================================================================== -->
    <section class="page-section">
      <SectionHeader
        title="Callout Panels"
        subtitle="For notices and highlighted info"
        align="center"
      />
      
      <div class="card-grid card-grid--3">
        <CalloutPanel variant="info">
          <h3>Info Callout</h3>
          <p>Use for helpful tips.</p>
        </CalloutPanel>
        
        <CalloutPanel variant="warning">
          <h3>Warning Callout</h3>
          <p>Use for cautions.</p>
        </CalloutPanel>
        
        <CalloutPanel variant="success">
          <h3>Success Callout</h3>
          <p>Use for confirmations.</p>
        </CalloutPanel>
      </div>
    </section>

    <SectionDivider />

    <!-- ========================================================================
         PATTERN 11: CTA ALIGNMENT VARIANTS
         ======================================================================== -->
    <section class="page-section">
      <SectionHeader
        title="CTA Alignment Variants"
        subtitle="Center, left, or right-aligned buttons"
        align="center"
      />
      
      <div class="content-prose">
        <p><strong>Centered (default):</strong></p>
      </div>
      <div class="section-cta">
        <LinkButton href={withBase("/")} variant="primary">Centered Button</LinkButton>
      </div>
      
      <div class="content-prose">
        <p><strong>Left-aligned:</strong></p>
      </div>
      <div class="section-cta section-cta--left">
        <LinkButton href={withBase("/")} variant="outline">Left-Aligned Button</LinkButton>
      </div>
      
      <div class="content-prose">
        <p><strong>Right-aligned:</strong></p>
      </div>
      <div class="section-cta section-cta--right">
        <LinkButton href={withBase("/")} variant="ghost">Right-Aligned Button</LinkButton>
      </div>
    </section>

    <SectionDivider />

    <!-- ========================================================================
         PATTERN 12: BREADCRUMB NAVIGATION
         ======================================================================== -->
    <section class="page-section">
      <SectionHeader
        title="Breadcrumb Navigation"
        subtitle="For hierarchical page context"
        align="center"
      />
      
      <nav class="breadcrumb" aria-label="Breadcrumb Example">
        <a href={withBase("/")}>Home</a>
        <span aria-hidden="true">/</span>
        <a href={withBase("/projects")}>Projects</a>
        <span aria-hidden="true">/</span>
        <span aria-current="page">Current Page</span>
      </nav>
    </section>

  </main>
</BaseLayout>